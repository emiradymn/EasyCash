@model EasyCash.Dto.Dtos.AppUserDtos.AppUserRegisterDto
@{
ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>

<head>

    <title>EasyCash -- Yeni Kullanıcı Kaydı</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="keywords"
        content="Existing Login Form Widget Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
    <script
        type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="~/register/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="~/register/css/style.css" type="text/css" media="all">
    <link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
</head>

<body>

    <h1>EasyCash Kayıt Formu</h1>

    <div class="w3layoutscontaineragileits">
        <h2>Yeni Müşteri</h2>
        <form action="#" method="post">
            <input type="text" asp-for="Name" placeholder="İSİM" required="">
            <input type="text" asp-for="Surname" placeholder="SOYİSİM" required="">
            <input type="text" asp-for="Username" placeholder="KULLANICI ADI" required="">
            <input type="text" asp-for="Email" placeholder="E-MAİL" required="">
            <input type="password" asp-for="Password" placeholder="ŞİFRE" required="">
            <input type="password" asp-for="ConfirmPassword" placeholder="ŞİFRE TEKRAR" required="">
            <br>
            <br>
            <div asp-validation-summary="ModelOnly"></div>

            <ul class="agileinfotickwthree">
                <li>
                    <input type="checkbox" id="brand1" value="">
                    <label for="brand1"><span></span>Kullanım Şartlarını Okudum.</label>
                    <a href="/Login/Index/">Bir Hesabınız var mı?</a>
                </li>
            </ul>
            <div class="aitssendbuttonw3ls">
                <input type="submit" value="LOGIN">
                <p> Ana Sayfaya Dön <span>→</span> <a class="w3_play_icon1" href="#small-dialog1"> EasyCash</a></p>
                <div class="clear"></div>
            </div>
        </form>
    </div>

    <div class="w3footeragile">
        <p> &copy; @DateTime.Now.Year Existing Login Form. All Rights Reserved | Design by Emir Adıyaman</p>
    </div>


    <script type="text/javascript" src="~/register/js/jquery-2.1.4.min.js"></script>

    <script src="~/register/js/jquery.magnific-popup.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>

</body>


</html>